import pandas as pd
import json
import re

# --- STEP 1: Load CSV Data ---
orders = pd.read_csv('orders.csv')

# --- STEP 2: Load JSON Data ---
with open('users.json', 'r') as f:
    users_data = json.load(f)
users = pd.DataFrame(users_data)

# --- STEP 3: Load SQL Data ---
with open('restaurants.sql', 'r') as f:
    sql_content = f.read()

# Using regex to extract values from SQL INSERT statements
pattern = r"\((\d+),\s*'([^']*)',\s*'([^']*)',\s*([\d\.]+)\)"
matches = re.findall(pattern, sql_content)
restaurants = pd.DataFrame(matches, columns=['restaurant_id', 'restaurant_name_sql', 'cuisine', 'rating'])
restaurants['restaurant_id'] = restaurants['restaurant_id'].astype(int)
restaurants['rating'] = restaurants['rating'].astype(float)

# --- STEP 4: Merge the Data ---
# Join orders with users (Left Join)
df = pd.merge(orders, users, on='user_id', how='left')
# Join with restaurants (Left Join)
df = pd.merge(df, restaurants, on='restaurant_id', how='left')

# --- STEP 5: Create Final Dataset ---
df.to_csv('final_food_delivery_dataset.csv', index=False)
print("Final dataset 'final_food_delivery_dataset.csv' created.")

# --- ANALYSIS & ANSWERS ---

# 1. Total orders by Gold members
gold_orders_count = df[df['membership'] == 'Gold'].shape[0]

# 2. Total revenue in Hyderabad
hyd_rev = df[df['city'] == 'Hyderabad']['total_amount'].sum()

# 3. Distinct users
distinct_users = df['user_id'].nunique()

# 4. Avg Order Value for Gold members
gold_avg_val = df[df['membership'] == 'Gold']['total_amount'].mean()

# 5. Orders for restaurants with rating >= 4.5
high_rating_orders = df[df['rating'] >= 4.5].shape[0]

# 6. Top Revenue City for Gold Members
gold_city_rev = df[df['membership'] == 'Gold'].groupby('city')['total_amount'].sum()
top_gold_city = gold_city_rev.idxmax()
top_gold_city_orders = df[(df['membership'] == 'Gold') & (df['city'] == top_gold_city)].shape[0]

print(f"Total Gold Orders: {gold_orders_count}")
print(f"Hyderabad Total Revenue: {round(hyd_rev)}")
print(f"Distinct Users: {distinct_users}")
print(f"Gold Avg Order Value: {round(gold_avg_val, 2)}")
print(f"Orders (Rating >= 4.5): {high_rating_orders}")
print(f"Orders in Top Gold City ({top_gold_city}): {top_gold_city_orders}")
